{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "filter by month",
      "type": "shell",
      "command": "find",
      "args": [
        "./src/pages/posts/${input:month}-*",
        "-type",
        "f"
      ],
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "inputs": [
    {
      "id": "month",
      "type": "promptString",
      "description": "年月をyyyy-mm形式で入力してください",
      "default": "2025-01"
    }
  ]
}
