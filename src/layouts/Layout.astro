---
import Meta from "../components/Meta.astro";
import GoogleFont from "../components/GoogleFont.astro";
import "../styles/global.css";
interface Props {
  title: string;
  description: string;
  tags: string;
}

const { title, description, tags } =
  (Astro.props as any)?.frontmatter ?? Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <link rel="icon" type="image/vnd.microsoft.icon" href="/til/favicon.ico" />

    <Meta title={title} description={description} tags={tags} />
    <GoogleFont />

    <title>{title}</title>
  </head>
  <body>
    <header>
      <a href="/til">≪ Today I learned.</a>
      <a href="/til/rss" target="_blank" aria-label="RSSフィードを購読する">
        RSS購読
      </a>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>
        <small>
          Copyright © 2024{" "}
          <a href="https://x.com/bc_rikko" target="_blank">
            ダーシノ(@bc_rikko)
          </a>
        </small>
      </p>
    </footer>
  </body>
</html>

<style>
header {
  display: flex;
  justify-content: space-between;
}
</style>