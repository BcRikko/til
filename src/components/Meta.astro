---
interface Props {
  title: string;
  description: string;
  tags: string;
  url?: string;
}

const props = Astro.props;

const ogImage = props.url
  ? `https://bcrikko.github.io/til/og/${props.url.replace("/til/posts/", "").replace("/", "&")}.png`
  : "https://bcrikko.github.io/til/bcrikko.png";
console.log(ogImage);
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />

<meta name="google-adsense-account" content="ca-pub-1276308583388146" />

<meta name="author" content="ダーシノ(@bc_rikko)" />
<meta name="description" content={props.description} />
<meta name="keywords" content={props.tags} />
<meta name="generator" content="Astro" />
<meta name="theme-color" content="#fafafa" />
<meta name="color-scheme" content="only light" />

<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:site" content="@bc_rikko" />
<meta property="twitter:creator" content="@bc_rikko" />
<meta property="og:site_name" content="Today I learned." />
<meta property="og:type" content="article" />
<meta property="og:title" content={`${props.title} | ダーシノ(@bc_rikko)`} />
<meta property="og:description" content={props.description} />
<meta property="og:image" content={ogImage} />
<meta property="og:url" content={Astro.url} />
