---
interface Props {
  title: string;
  pubDate: string;
  tags: string[]
}

const { title, pubDate, tags } = Astro.props;
---

<hgroup>
  <dl class="tags">
    <div>
      <dt>公開日</dt>
      <dd><time>{pubDate}</time></dd>
    </div>
    <div>
      <dt>タグ</dt>
      <dd>{tags.join(', ')}</dd>
    </div>
    <div>
      <dt>著者</dt>
      <dd>
        <a href="https://x.com/bc_rikko" target="_blank">@bc_rikko<a>
      </dd>
    </div>
  </dl>
  <h1>{title}</h1>
</hgroup>

<style>
.tags {
  font-size: 0.8rem;
  display: flex;
  flex-wrap: wrap;
  gap: 2em;

  > div {
    display: flex;
    gap: 0.5em;
  }

  dt::after {
    content: ":";
  }

  dd {
    margin: 0;
  }
}
</style>